<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home</title>
</head>
<body class="bg-gray-100  min-h-screen p-20">
    <a href="/logout" class="bg-red-500 text-white py-2 px-4 rounded-full font-semibold hover:bg-red-600 transition-colors duration-200 mb-2 inline-block">Logout</a>
    <div class="container mx-auto">
        <a href="/create" class="bg-blue-500 text-white py-2 px-4 rounded-full font-semibold hover:bg-blue-600 transition-colors duration-200 mb-2 inline-block">Add User</a>
         
        <div class="grid grid-cols-3 gap-4">
            <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden max-w-sm w-full5">
                <div class="relative">
                    <img src="<%= user.image %>" alt="User image" class="w-full h-64 object-cover">
                </div>
                <div class="p-4">
                    <h2 class="text-xl font-semibold text-gray-800 mb-1"><%= user.name %></h2>
                    <p class="text-sm text-gray-600"><%= user.email %></p>
                </div>
                <div class="flex space-x-2 p-4">
                    <a href="/edit/<%= user._id %>" class="bg-blue-500 text-white py-2 px-4 rounded-full font-semibold hover:bg-blue-600 transition-colors duration-200">Edit</a>
                    <a href="/delete/<%= user._id %>" class="bg-gray-200 text-gray-800 py-2 px-4 rounded-full font-semibold hover:bg-gray-300 transition-colors duration-200">Delete</a>
                </div>
            </div>

        <% }) %>
        <% } else { %>
            <p class="text-center text-gray-600">No users found</p>
        <% } %>

    </div>
    </div>
</body>
</html>