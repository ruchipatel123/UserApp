{
    "version": 2,
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api"
      }
    ],
     "builds": [
      {
        "src": "app.js",
        "dest": "app.js",
        "env": {
            "MONGO_URI": "@mongo_uri"
        },
        "output": "standalone",
        "use": "@vercel/node"
      }
    ]
  }